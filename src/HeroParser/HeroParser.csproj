<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <ImplicitUsings>disable</ImplicitUsings>

    <!-- Package metadata -->
    <PackageId>HeroParser</PackageId>
    <Version>3.0.0</Version>
    <Authors>HeroParser Contributors</Authors>
    <Description>RFC 4180 compliant CSV parser with quote-aware SIMD parsing (AVX-512/AVX2/NEON), zero allocations, lazy column evaluation. Requires .NET 8+</Description>
    <PackageTags>csv;parser;simd;avx512;avx2;neon;performance;zero-allocation;rfc4180;quote-handling</PackageTags>
    <RepositoryUrl>https://github.com/KoalaFacts/HeroParser</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Enable optimizations -->
    <Optimize>true</Optimize>
    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
