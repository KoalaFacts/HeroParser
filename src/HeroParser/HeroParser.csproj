<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(SupportedTargetFrameworks)</TargetFrameworks>
    <!-- Package metadata -->
    <PackageId>HeroParser</PackageId>
    <Version>1.0.0</Version>
    <Authors>HeroParser Contributors</Authors>
    <Description>High-performance CSV parser with RFC 4180 quote handling, SIMD optimizations, zero allocations, and lazy evaluation. Supports quoted fields with escaped quotes and delimiters in quotes. No unsafe keyword - uses safe Unsafe class APIs. Requires .NET 8+</Description>
    <PackageTags>csv;parser;simd;avx512;avx2;neon;performance;zero-allocation;rfc4180;quote-handling</PackageTags>
    <RepositoryUrl>https://github.com/KoalaFacts/HeroParser</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
