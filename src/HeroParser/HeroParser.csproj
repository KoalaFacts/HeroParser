<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <ImplicitUsings>disable</ImplicitUsings>

    <!-- Package metadata -->
    <PackageId>HeroParser</PackageId>
    <Version>3.0.0</Version>
    <Authors>HeroParser Contributors</Authors>
    <Description>World's fastest .NET CSV parser - 30+ GB/s with SIMD, zero allocations, no unsafe code. Requires .NET 8+</Description>
    <PackageTags>csv;parser;simd;avx512;avx2;neon;performance;zero-allocation</PackageTags>
    <RepositoryUrl>https://github.com/KoalaFacts/HeroParser</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Enable optimizations -->
    <Optimize>true</Optimize>
    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
