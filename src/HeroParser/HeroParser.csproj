<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Multi-target framework support: netstandard2.0 through net10.0 -->
    <TargetFrameworks>netstandard2.0;netstandard2.1;net6.0;net7.0;net8.0;net9.0;net10.0</TargetFrameworks>

    <!-- Language and compilation settings -->
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsNotAsErrors>NU1701</WarningsNotAsErrors>

    <!-- Package metadata -->
    <AssemblyTitle>HeroParser</AssemblyTitle>
    <Product>HeroParser</Product>
    <Description>High-performance C# CSV/fixed-length parser targeting >30 GB/s throughput with zero allocations</Description>
    <Copyright>Copyright Â© 2025 BeingCiteable</Copyright>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>
    <PackageVersion>1.0.0-preview.1</PackageVersion>

    <!-- NuGet package configuration -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>HeroParser</PackageId>
    <PackageTags>csv;parser;performance;simd;zero-allocation;high-performance</PackageTags>
    <PackageProjectUrl>https://github.com/BeingCiteable/HeroParser</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/BeingCiteable/HeroParser</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <!-- Performance optimizations -->
    <Optimize>true</Optimize>
    <DebugType>portable</DebugType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <!-- .NET 10+ specific optimizations -->
  <PropertyGroup Condition="'$(TargetFramework)' == 'net10.0'">
    <InvariantGlobalization>true</InvariantGlobalization>
    <StackTraceSupport>false</StackTraceSupport>
    <OptimizationPreference>Speed</OptimizationPreference>
    <IlcOptimizationPreference>Speed</IlcOptimizationPreference>
  </PropertyGroup>

  <!-- .NET 8+ specific optimizations -->
  <PropertyGroup Condition="'$(TargetFramework)' == 'net8.0' OR '$(TargetFramework)' == 'net9.0'">
    <InvariantGlobalization>true</InvariantGlobalization>
  </PropertyGroup>

  <!-- .NET 6+ specific optimizations -->
  <PropertyGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible('net6.0', $(TargetFramework)))">
    <EnablePreviewFeatures>true</EnablePreviewFeatures>
  </PropertyGroup>

  <!-- Framework-specific package references -->
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <!-- Polyfills for .NET Standard 2.0 compatibility -->
    <PackageReference Include="System.Memory" Version="4.5.5" />
    <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
    <!-- Limited polyfills for .NET Standard 2.1 -->
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.0.0" />
  </ItemGroup>

  <!-- Development dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All"/>
  </ItemGroup>

  <!-- Compiler constants for conditional compilation -->
  <PropertyGroup>
    <DefineConstants Condition="$([MSBuild]::IsTargetFrameworkCompatible('net10.0', $(TargetFramework)))">$(DefineConstants);NET10_0_OR_GREATER</DefineConstants>
    <DefineConstants Condition="$([MSBuild]::IsTargetFrameworkCompatible('net9.0', $(TargetFramework)))">$(DefineConstants);NET9_0_OR_GREATER</DefineConstants>
    <DefineConstants Condition="$([MSBuild]::IsTargetFrameworkCompatible('net8.0', $(TargetFramework)))">$(DefineConstants);NET8_0_OR_GREATER</DefineConstants>
    <DefineConstants Condition="$([MSBuild]::IsTargetFrameworkCompatible('net7.0', $(TargetFramework)))">$(DefineConstants);NET7_0_OR_GREATER</DefineConstants>
    <DefineConstants Condition="$([MSBuild]::IsTargetFrameworkCompatible('net6.0', $(TargetFramework)))">$(DefineConstants);NET6_0_OR_GREATER</DefineConstants>
  </PropertyGroup>

  <!-- Assembly-level attributes -->
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>HeroParser.UnitTests</_Parameter1>
    </AssemblyAttribute>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>HeroParser.BenchmarkTests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

</Project>