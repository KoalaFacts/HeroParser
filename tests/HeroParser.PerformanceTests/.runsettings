<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <!-- Configuration for performance test execution -->
  <RunConfiguration>
    <!-- Single CPU core for consistent performance measurements -->
    <MaxCpuCount>1</MaxCpuCount>
    <!-- Extended timeout for performance tests -->
    <TestSessionTimeout>600000</TestSessionTimeout>
  </RunConfiguration>

  <!-- Framework-specific settings for xUnit -->
  <xUnit>
    <!-- Disable parallel execution for performance tests -->
    <ParallelizeAssembly>false</ParallelizeAssembly>
    <ParallelizeTestCollections>false</ParallelizeTestCollections>
    <!-- Single thread for consistent performance measurements -->
    <MaxParallelThreads>1</MaxParallelThreads>
  </xUnit>

  <!-- Framework-specific settings for MSTest (if needed) -->
  <MSTest>
    <Parallelize>
      <Workers>1</Workers>
      <Scope>ClassLevel</Scope>
    </Parallelize>
  </MSTest>

  <!-- Framework-specific settings for NUnit (if needed) -->
  <NUnit>
    <NumberOfTestWorkers>1</NumberOfTestWorkers>
  </NUnit>
</RunSettings>