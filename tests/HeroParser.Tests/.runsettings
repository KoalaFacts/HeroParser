<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <!-- Configuration for test execution -->
  <RunConfiguration>
    <!-- Maximum number of test adapters that can run in parallel -->
    <MaxCpuCount>0</MaxCpuCount>
    <!-- Timeout for tests in milliseconds -->
    <TestSessionTimeout>300000</TestSessionTimeout>
  </RunConfiguration>

  <!-- Framework-specific settings for xUnit -->
  <xUnit>
    <!-- Enable parallel execution within assemblies -->
    <ParallelizeAssembly>true</ParallelizeAssembly>
    <!-- Enable parallel execution between test collections -->
    <ParallelizeTestCollections>true</ParallelizeTestCollections>
    <!-- Use default thread count (processor count) -->
    <MaxParallelThreads>default</MaxParallelThreads>
  </xUnit>

  <!-- Framework-specific settings for MSTest (if needed) -->
  <MSTest>
    <Parallelize>
      <Workers>0</Workers>
      <Scope>MethodLevel</Scope>
    </Parallelize>
  </MSTest>

  <!-- Framework-specific settings for NUnit (if needed) -->
  <NUnit>
    <NumberOfTestWorkers>-1</NumberOfTestWorkers>
  </NUnit>
</RunSettings>